<div class="col-md-8 col-md-offset-2">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Sign up</h2>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

           <div class="form-group">
            <%= f.label :학번 %><br />
            <%= f.text_field :studentid, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :이름 %><br />
            <%= f.text_field :username , class: "form-control"%>
          </div>
          
          <div class="form-group">
            <%= f.label :학과 %><br />
              <div class="form-control">
              <label><%= f.radio_button :major,'응용통계학과'%>응용통계학과</label>
              <label><%= f.radio_button :major,'국제무역학과'%>국제무역학과</label>
              <label><%= f.radio_button :major,'경제학과'%>경제학과</label>
              <label><%= f.radio_button :major,'소비자정보학과'%>소비자정보학과</label>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :전화번호 %><br />
            <%= f.text_field :phone , class: "form-control"%>
          </div>

          <div class="form-group">
            <%= f.label :비밀번호 %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :비밀번호확인 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "회원가입하기", class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>  
