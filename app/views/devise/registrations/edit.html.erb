<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2>회원정보수정</h2>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label :학번 %><br />
              <%= f.text_field :studentid, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :이름 %><br />
              <%= f.text_field :username , class: "form-control"%>
            </div>
            
            <div class="form-group">
              <%= f.label :학과 %><br />
                <label class="radio_choose_clearfix"><%= f.radio_button :major,'응용통계학과'%><span>응용통계학과</span></label>
                <label class="radio_choose_clearfix"><%= f.radio_button :major,'국제무역학과'%><span>국제무역학과</span></label>
                <label class="radio_choose_clearfix"><%= f.radio_button :major,'경제학과'%><span>경제학과</span></label>
                <label class="radio_choose_clearfix"><%= f.radio_button :major,'소비자정보학과'%><span>소비자정보학과</span></label>
            </div>

            <div class="form-group">
              <%= f.label :전화번호 %><br />
              <%= f.text_field :phone , class: "form-control"%>
            </div>


            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <%= f.label :비밀번호 %> <i>(변경을 원하지 않을경우에 빈칸으로 두세요. 최소 6자)</i><br />
              <%= f.password_field :password, autocomplete: "off" , class: "form-control"%>
            </div>

            <div class="form-group">
              <%= f.label :비밀번호확인 %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control"%>
            </div>

            <div class="form-group">
              <%= f.label :현재비밀번호 %> <br />
              <%= f.password_field :current_password, autocomplete: "off" , class: "form-control"%>
            </div>

            <div class="form-group">
              <%= f.submit "수정하기" , class: "btn btn-primary"%>
            </div>
          <% end %>
        </div>

        <div class="panel-footer">
          <%= link_to "탈퇴하기", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn" %>
          <%= link_to "되돌아가기", :back ,class: "btn"%>
        </div> 
      </div>
    </div>
  </div>
</div>
<style>
  .radio_choose {
      width: 113px;
      font-size: 14px;
      color: #555;
      margin: 5px 5px 0px 5px;
  }
  .radio {
      float: left;
  }
  span{
    font-size: 14px;
  }
  input[type="radio"]{
    -webkit-appearance: none;
    padding: 8px;
    background: #ffffff;
    border-radius: 5px;
    border: 1px solid black;
    margin-right: 4px;
  }
  input[type="radio"]:checked{
	  background-color: #ffeb3b;
    border-color: #ffeb3b;
    outline:0;
  }
</style>
